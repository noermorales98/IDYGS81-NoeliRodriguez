@model IDYGS81_NoeliRodriguez.Models.Rol

@{
    Layout = "_LayoutDashboard";
}

<div class="container-fuild">
    <div class="offset-12">
        <h1>Creando un nuevo Rol</h1>
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Crear un nuevo Rol</strong></h1>
            </div>
            <div class="card-body">
                <form asp-action="Crear" method="post">
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" />
                    </div>
                    <div class="form-group mt-3">
                        <button class="btn btn-secondary d-block mx-auto align-self-auto">Guardar</button>
                    </div>
                </form>
                <a asp-controller="Rol" asp-action="Index">Atras</a>
            </div>
        </div>
    </div>
</div>