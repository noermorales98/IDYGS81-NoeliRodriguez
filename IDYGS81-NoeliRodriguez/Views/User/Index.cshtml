@model IEnumerable<IDYGS81_NoeliRodriguez.Models.Usuario>

@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutDashboard";

}


@*<h1 class="text-center">Bienvenidos</h1>*@



<link rel="stylesheet" href="~/css/site.css">

<div class="row">
    <div class="offset-10 col-3 mb-3">
        <a asp-action="Crear" id="btn-crear" asp-controller="User" class="btn-success d-block mx-auto btn-crear">

            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: #fff;transform: ;msFilter:;"><path d="M13 7h-2v4H7v2h4v4h2v-4h4v-2h-4z"></path><path d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm0 18c-4.411 0-8-3.589-8-8s3.589-8 8-8 8 3.589 8 8-3.589 8-8 8z"></path></svg>
        </a>
    </div>
</div>

<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Lista de usuarios</strong></h1>

            </div>

            <div class="card-body">
                <div class="table-responsive">

                    @if (Model.Count() > 0)
                    {



                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                     
                                    <th> @Html.DisplayNameFor(x => x.Nombre )</th>
                                    <th> @Html.DisplayNameFor(x => x.Correo )</th>
                                    <th> @Html.DisplayNameFor(x => x.Password )</th>
                                    <th> Rol</th>
                                    <th> Acciones</th>
                                </tr>


                            </thead>
                            <tbody>
                                
                                @foreach (var Item in Model)
                                {


                                    <tr>

                                        <td> @Html.DisplayFor(x => Item.Nombre )</td>
                                        <td> @Html.DisplayFor(x => Item.Correo )</td>
                                        <td> @Html.DisplayFor(x => Item.Password )</td>
                                        <td> @Html.DisplayFor(x => Item.Roles.Nombre)</td>
                                        <td>
                                            <a class=" btn btn-warning" asp-action="Editar" asp-route-id=@Item.PkUsuario><i class="fa-solid fa-pen-to-square"></i> Editar</a>
                                            <a class=" btn btn-danger" asp-action="Eliminar" asp-route-id=@Item.PkUsuario id="Obtener"><i class="fa-solid fa-trash"></i> Eliminar</a>
                                        </td>

                                    </tr>


                                }

                            </tbody>

                        </table>

                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>

            </div>


        </div>


    </div>




</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            //Llamar a datatable
            $('#tblUsuarios').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando START a END de TOTAL Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de MAX total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar MENU Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });

            function GetId(id) {

            }

            var table = $('#tblUsuarios').DataTable();



            $('#tblUsuarios').on('click', 'tr', function () {
                var id = table.row(this).id();

                alert('Clicked row id ' + id);
            });

        });




    </script>

}