@model IDYGS81_NoeliRodriguez.Models.Usuario

@{
    Layout = "_Layout";
}


<div class="container">

    <form asp-controller="Login" asp-action="Verificar" method="post">
        <div class="form-group mt-3">
            <h2>Login to Your Account</h2>

            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-5">
                <input asp-for="Correo" type="text" class="form-control" id="user">
            </div>
        </div>
        <div class="form-group mt-3">
            <label for="password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-5">
                <input asp-for="Password" type="password" class="form-control" id="password">
            </div>
            <p id="parrafo1"></p>
        </div>
        <div id="FormLog">

            <button id="Login" type="submit" class="btn btn-success d-block">Iniciar</button>

        </div>
    </form>







</div>

