@model IEnumerable<IDYGS81_NoeliRodriguez.Models.Usuario>

@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutPublic";

}


@*<h1 class="text-center">Bienvenidos</h1>*@



<link rel="stylesheet" href="~/css/site.css">


<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Lista de usuarios</strong></h1>

            </div>

            <div class="card-body">
                <div class="table-responsive">

                    @if (Model.Count() > 0)
                    {



                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>

                                    <th> @Html.DisplayNameFor(x => x.Nombre )</th>
                                    <th> @Html.DisplayNameFor(x => x.Correo )</th>
                                    <th> @Html.DisplayNameFor(x => x.Password )</th>
                                    <th> Rol</th>
                                </tr>


                            </thead>
                            <tbody>

                                @foreach (var Item in Model)
                                {


                                    <tr>

                                        <td> @Html.DisplayFor(x => Item.Nombre )</td>
                                        <td> @Html.DisplayFor(x => Item.Correo )</td>
                                        <td> @Html.DisplayFor(x => Item.Password )</td>
                                        <td> @Html.DisplayFor(x => Item.Roles.Nombre)</td>

                                    </tr>


                                }

                            </tbody>

                        </table>

                    }
                    else
                    {
                        <p>No hay registros</p>
                    }
                </div>

            </div>


        </div>


    </div>




</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            //Llamar a datatable
            $('#tblUsuarios').DataTable({
                language: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando START a END de TOTAL Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoFiltered": "(Filtrado de MAX total entradas)",
                    "infoPostFix": "",
                    "thousands": ",",
                    "lengthMenu": "Mostrar MENU Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });

            function GetId(id) {

            }

            var table = $('#tblUsuarios').DataTable();



            $('#tblUsuarios').on('click', 'tr', function () {
                var id = table.row(this).id();

                alert('Clicked row id ' + id);
            });

        });




    </script>

}