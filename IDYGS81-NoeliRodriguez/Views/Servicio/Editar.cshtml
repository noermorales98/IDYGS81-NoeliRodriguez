@model IDYGS81_NoeliRodriguez.Models.Servicio

@{
    Layout = "_LayoutDashboard";
}

<div class="container-fuild">
    <div class="offset-12">
        <h1>Editando un servicio</h1>
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Editar un nuevo servicio</strong></h1>
            </div>
            <div class="card-body">
                <form asp-action="Editar" method="post">
                    <div class="form-group" style="display:none;">
                        <label asp-for="PkServicio" class="control-label">Id</label>
                        <input asp-for="PkServicio" readonly class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Titulo" class="control-label">Titlo</label>
                        <input asp-for="Titulo" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label">Descripcion</label>
                        <input asp-for="Descripcion" class="form-control" />
                    </div>
                    <div class="form-group mt-3">
                        <button class="btn btn-secondary d-block mx-auto align-self-auto">Actualizar</button>
                    </div>
                </form>
                <a asp-controller="Servicio" asp-action="Index">Atras</a>
            </div>
        </div>
    </div>
</div>